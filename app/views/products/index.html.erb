<table class='table table-striped table-bordered table-hover '>
  <thead class='table-dark'>
    <tr>
      <th>Product code</th>
      <th>Item name</th>
      <th>Stock level</th>
      <th>Re order level</th>
      <th>Order quantity</th>
      <th>Price cents</th>
      <th>Category</th>
      <th>Supplier code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.product_code %></td>
        <td><%= product.item_name %></td>
        <td><%= product.stock_level %></td>
        <td><%= product.re_order_level %></td>
        <td><%= product.order_quantity %></td>
        <td><%= product.price_cents %></td>
        <td><%= product.category %></td>
        <td><%= product.supplier_code %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path, class:"btn btn-secondary" %>
